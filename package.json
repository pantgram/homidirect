{
  "name": "homidirect",
  "version": "1.0.0",
  "private": true,
  "description": "Homidirect monorepo - Real estate platform",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter @homidirect/web dev",
    "dev:landing": "pnpm --filter @homidirect/landing dev",
    "dev:api": "pnpm --filter @homidirect/api dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @homidirect/web build",
    "build:landing": "pnpm --filter @homidirect/landing build",
    "build:api": "pnpm --filter @homidirect/api build",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:push": "pnpm --filter @homidirect/api db:push",
    "db:studio": "pnpm --filter @homidirect/api db:studio",
    "db:generate": "pnpm --filter @homidirect/api db:generate",
    "db:migrate": "pnpm --filter @homidirect/api db:migrate"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
